{
  "functions": {
    "api/generate-story.js": {
      "maxDuration": 9
    },
    "api/generate-images.js": {
      "maxDuration": 9
    },
    "api/generate-audio.js": {
      "maxDuration": 9
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}